include ../routes/index

!!! 5
html(dir='#{site.dir}', lang='#{site.lang}', class='no-js', itemscope, itemtype='http://schema.org/WebPage')
  head
    meta(charset='utf-8')
    //
      | Copyright (c) 2002-#{site.copyrightYear} by Lance Guyatt 

    block head
      title #{site.name} | #{site.title}

      //- default meta
      meta(name='description', content='#{site.description}')
      meta(name='keywords', content='#{site.keywords}')

      //- microdata meta
      meta(itemprop='name', content='#{site.name}')
      meta(itemprop='description', content='#{site.description}')
      meta(itemprop='url', content='#{site.url}')
      meta(itemprop='image', content='#{site.url}/#{paths.images}/#{site.image}')

      //- opengraph meta
      meta(property='og:title', content='#{site.title}')
      meta(property='og:site_name', content='#{site.name}')
      meta(property='og:description', content='#{site.description}')
      meta(property='og:url', content='#{site.url}')
      meta(property='og:image', content='#{site.url}/#{paths.images}/#{site.image}')
      meta(property='og:type', content='website')

      //- mobile meta
      meta(name='apple-mobile-web-app-capable', content='yes')
      meta(name='HandheldFriendly', content='true')
      meta(name='viewport', content='width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no') 

      //- iOS meta
      meta(name='application-name', content='#{site.name}')

      //- MS meta
      meta(name='msapplication-window', content='width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0')
      meta(name='msapplication-TileColor', content='#d4d31b')
      meta(name='msapplication-TileImage', content='#{site.url}/apple-touch-icon-144x144-precomposed.png')

      //- verification meta
      meta(name='google-site-verification', content='PzUp6ZCjfPJmtaHUGPbg-efsiiVmvi0lb3s5SGXJua4')

      //- stylesheets
      link(rel='stylesheet', href='#{paths.css}/style.css', media='all')
      //-link(rel='stylesheet', href='#{paths.css}/layout.css', media='all and (min-width: 36.236em)')
      // if (lt IE 9) & (!IEMobile)
        //- link(rel='stylesheet', href='#{paths.css}/layout.css', media='all')

      link(rel='shortcut icon', href='#{site.url}/favicon.ico')
      link(rel='apple-touch-icon-precomposed', href='#{site.url}/apple-touch-icon-precomposed.png')

      //- author
      link(rel='author', href='#{site.url}/humans.txt', type='text/plain')

      script(src='#{paths.js}/modernizr.min.js')

  body
    header(role='banner')

    div(class='main', role='main', itemprop='mainContentofPage')

      block main

    footer(role='contentinfo')

      block footer

    block scripts