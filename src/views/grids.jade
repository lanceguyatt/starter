    div(class='s-12 m-6 l-8 l-omega xl-4 xxl-6 xxl-omega')
      div(class='column')
        div(class='s-show m-hide l-hide xl-hide xxl-hide') .s-12
        div(class='s-hide m-show l-hide xl-hide xxl-hide') .m-6
        div(class='s-hide m-hide l-show xl-hide xxl-hide') .l-8
        div(class='s-hide m-hide l-hide xl-show xxl-hide') .xl-4
        div(class='s-hide m-hide l-hide xl-hide xxl-show') .xxl-6x2

    div(class='s-6 m-6 m-omega l-8 xl-4 xl-omega xxl-6')
      div(class='column')
        div(class='s-show m-hide l-hide xl-hide xxl-hide') .s-6
        div(class='s-hide m-show l-hide xl-hide xxl-hide') .m-6
        div(class='s-hide m-hide l-show xl-hide xxl-hide') .l-8
        div(class='s-hide m-hide l-hide xl-show xxl-hide') .xl-4
