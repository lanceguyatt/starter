extends layouts/_default

block title

  mixin title('Grids')

block main

  div(class='row')
    h2 Grid
    div(class='s-1 column')
    div(class='s-1 column')
    div(class='s-1 column')
    div(class='s-1 column')
    div(class='s-1 column')
    div(class='s-1 column')
    div(class='s-1 column')
    div(class='s-1 column')
    div(class='s-1 column')
    div(class='s-1 column')
    div(class='s-1 column')
    div(class='s-1 s-omega column')


  div(class='row')
    div(class='s-12 m-12 l-4 xl-4 xxl-6')
      div(class='column')
        div(class='s-show m-hide l-hide xl-hide xxl-hide') .s-12
        div(class='s-hide m-show l-hide xl-hide xxl-hide') .m-12
        div(class='s-hide m-hide l-show xl-hide xxl-hide') .l-4
        div(class='s-hide m-hide l-hide xl-show xxl-hide') .xl-4
