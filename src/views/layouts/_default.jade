include ../helpers/_mixins

!!! 5
html(dir='#{site.dir}', lang='#{site.lang}', prefix='og: http://ogp.me/ns schema: http://schema.org/', itemscope, itemtype='http://schema.org/WebPage', class='no-js')
  head

    block head

      include ../includes/_head

  body

    div(id='root')

      header(class='header', role='banner')

        div(class='container')

          div(class='columns')

            div(class='large-6')
              h1 #{site.title}

      main(class='main', role='main', itemprop='mainContentofPage')

        block main

      div(id='root-footer')

    footer(class='footer', role='contentinfo')

      div(class='container')

        div(class='columns')

          div(class='large-6')
            p #{site.title}

          div(class='large-6 large-omega large-text-right')
            p(class='copyright')
              | Copyright &#169; 
              span(itemprop='copyrightYear') #{site.copyrightYear}
              | 
              span(itemprop='author', itemscope, itemtype='http://schema.org/Person')
                a(href='#{author.url}', rel='external', target='_blank')
                  span(itemprop='name') #{author.name}
                meta(itemprop='url', content='#{author.url}')
                a(href='#{author.google}', rel='publisher', itemprop='url', hidden) Google+

    block script

      script(src='#{paths.js}/plugins.min.js')
      script(src='#{paths.js}/app.js')
