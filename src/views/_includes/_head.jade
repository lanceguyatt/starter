meta(charset='utf-8')
//-meta(http-equiv='X-UA-Compatible', content='IE=edge')
| 
<!-- Copyright (c) #{site.copyrightYear} by #{author.name} (#{author.url}) -->

block title

//- default meta
//-
meta(name='description', content='#{site.description}')
meta(name='keywords', content='#{site.keywords}')

//- microdata meta
meta(itemprop='name', content='#{site.name}')
meta(itemprop='description', content='#{site.description}')
meta(itemprop='url', content='#{site.url}')
meta(itemprop='image', content='#{site.image}')

//- opengraph meta
//-
  meta(property='og:site_name', content='#{site.name}')
  meta(property='og:locale', content='#{site.locale}')
  meta(property='og:type', content='#{site.type}')
  meta(property='og:title', content='#{site.title}')
  meta(property='og:description', content='#{site.description}')
  meta(property='og:url', content='#{site.url}')
  meta(property='og:image', content='#{site.image}')

//- mobile meta
//-
  meta(name='apple-mobile-web-app-capable', content='yes')
  meta(name='HandheldFriendly', content='true')
meta(name='viewport', content='user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1')

//- iOS meta
  meta(name='apple-mobile-web-app-title', content='#{site.name}')

//- Microsoft meta
//-
  meta(name='msapplication-window', content='user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1')
  meta(name='msapplication-TileColor', content='#cccccc')
  meta(name='msapplication-TileImage', content='#{site.url}/apple-touch-icon-144x144-precomposed.png')

//- Twitter card
//-
  meta(name='twitter:card', content='summary')
  meta(name='twitter:site', content='#{author.twitter}')
  meta(name='twitter:domain', content='#{site.url}')
  meta(name='twitter:title', content='#{site.title}')
  meta(name='twitter:creator', content='#{author.twitter}')
  meta(name='twitter:creator:id', content='#{author.twitter_id}')
  meta(name='twitter:description', content='#{site.description}')
  meta(name='twitter:image:src', content='#{site.image}')

//- Google meta
//-
  meta(name='google-site-verification', content='XXXXXXXXXXXX')

//- stylesheets
block stylesheets

  <!--[if lte IE 9]><link rel="stylesheet" href="#{paths.css}/style-lt-ie9.css" media="all"><![endif]-->
  <!--[if gte IE 9]><!--><link rel="stylesheet" href="#{paths.css}/style.css" media="all"><!--<![endif]-->

//- Place favicon.ico and apple-touch-icon.png in the root directory 
//-
  link(rel='shortcut icon', href='favicon.ico')
  link(rel='apple-touch-icon-precomposed', href='apple-touch-icon-57x57-precomposed.png')
  link(rel='apple-touch-icon-precomposed', href='apple-touch-icon-72x72-precomposed.png', sizes='72x72')
  link(rel='apple-touch-icon-precomposed', href='apple-touch-icon-114x114-precomposed.png', sizes='114x114')
  link(rel='apple-touch-icon-precomposed', href='apple-touch-icon-144x144-precomposed.png', sizes='144x144')


//- author
//-
  link(rel='author', href='/#{author.twitter}')
  link(rel='publisher', href='#{author.google}')
link(rel='author', href='humans.txt')

script(src='#{paths.js}/modernizr.min.js')
